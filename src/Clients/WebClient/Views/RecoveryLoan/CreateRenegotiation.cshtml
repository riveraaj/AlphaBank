@model Dtos.AlphaBank.Common.CreateRenegotiationContractDTO;

<div class="row">
    <div class="col-md-12">

        <input name="loanId" type="hidden" class="form-control" value="@ViewBag.LoanId"/>

        <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <label asp-for="NewLoanTerm" class="control-label">Nuevo Plazo:</label>
            <select asp-for="NewLoanTerm" asp-items="ViewBag.Deadline" class="form-control"></select>
            <span asp-validation-for="NewLoanTerm" class="text-danger"></span>
        </div>

        <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <label asp-for="NewInterestPercentage" class="control-label">Nuevo Interés:</label>
            <select asp-for="NewInterestPercentage" asp-items="ViewBag.Interest" class="form-control"></select>
            <span asp-validation-for="NewInterestPercentage" class="text-danger"></span>
        </div>

        <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <label asp-for="NewLoanAmount" class="control-label">Monto:</label>
            <input asp-for="NewLoanAmount" type="number"  class="form-control" />
            <span asp-validation-for="NewLoanAmount" class="text-danger"></span>
        </div>
    </div>
</div>
