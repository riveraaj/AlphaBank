@model Dtos.AlphaBank.Security.UserLoginDto;

@{
    Layout = "~/Views/Shared/_Layout-Main.cshtml";
    ViewData["Title"] = "Home Page";
}

@if (!User.IsInRole("1"))
{
    <div class="container">
        <form method="post" class="d-flex justify-content-center" asp-action="Login" asp-controller="Login">
            <div class="card-white-transparent shadow-container mt-5">
                <div class="header-card">
                    <p class="tittle">Inicio de Sesión</p>
                </div>
                <div class="card-main pt-3">
                    <div class="form-group pt-3">
                        <label asp-for="Id" class="control-label">Identificación:</label>
                        <input type="text" asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="Password" class="control-label">Contraseña:</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">@ViewData["Error"]</span>
                    </div>
                    <br />
                    <div class="form-group d-flex justify-content-center pt-3">
                        <input type="submit" value="Ingresar" class="btn btn-green" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}

@if (User.IsInRole("1"))
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="container">
        <form method="post" asp-action="Logout" asp-controller="Home">
            <input type="submit" value="Cerrar sesión" class="btn btn-primary" />
        </form>
    </div>
}