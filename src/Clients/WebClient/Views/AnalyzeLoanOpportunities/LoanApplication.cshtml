                <div class="row">
                    <h5>Archivos Adjuntos:</h5>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                        <section class="mt-3">
                            <h5>Orden Patronal:</h5>
                            <div class="col-12 col-12 px-5 pt-5 pb-3 form-box bg-dark bg-opacity-10 text-center fs-5">
                                <form>
                                    <i class="fa fa-solid fa-download font-50"></i>
                                    <label for="file" class="small col-12">
                                        Seleccione el archivo
                                        </span>Aquí
                                    </label>
                                    <input type="file" id="file" name="myfile" class="opacity-0" onchange="fileUpload()">
                                </form>
                            </div>
                            <div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col-12 col-12">
                                        <ul class="list-group mx-auto my-3 rounded-0" id="list">
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                        <section class="mt-3">
                            <h5>Constancia salarial:</h5>
                            <div class="col-12 col-12 px-5 pt-5 pb-3 form-box bg-dark bg-opacity-10 text-center fs-5">
                                <form>
                                    <i class="fa fa-solid fa-download font-50"></i>
                                    <label for="file" class="small col-12">
                                        Seleccione el archivo
                                        </span>Aquí
                                    </label>
                                    <input type="file" id="file" name="myfile" class="opacity-0" onchange="fileUpload()">
                                </form>
                            </div>
                            <div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col-12 col-12">
                                        <ul class="list-group mx-auto my-3 rounded-0" id="list">
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <br />
                <hr />
                <h5>Información del préstamo:</h5>
                <div class="row">
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Tipo de préstamo:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Plazo:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Moneda:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Monto a solicitar:</label>
                        <input type="number" asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"   ></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Interés:</label>
                        <input type="number" asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label asp-for="Id" class="control-label">Justificación:</label>
                        <textarea  asp-for="Id" class="form-control" ></textarea>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Cuenta Bancaria:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span class="text-danger">@ViewData["Error"]</span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-center pt-3">
                    <input type="submit" value="Enviar Solicitud" class="btn btn-green" />
                </div>
            </div>
        </div>
</div>