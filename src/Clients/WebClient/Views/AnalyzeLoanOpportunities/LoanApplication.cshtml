                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Ocupación:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
