@model Dtos.AlphaBank.Security.UserLoginDto;

@{
    Layout = "~/Views/Shared/_LayoutSecondary.cshtml";
    ViewData["Title"] = "Cerrar Cuenta";
}

<div class="container">
    <form method="post" class="d-flex justify-content-center" asp-action="" asp-controller="">
        <div class="card-white-transparent shadow-container mt-5 w-100">
            <div class="header-card">
                <div class="row">
                    <p class="tittle">Cierre de Cuentas Bancarias</p>
                </div>
                <br />
                <div class="row mt-4">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-5">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center align-items-center control-label">
                                Número de cuenta
                            </div>
                            <div class="col-8">
                                <input type="text" asp-for="Id" class="form-control input-radius-50 mt-0" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-5 pt-3 pt-sm-3 pt-md-0 pt-lg-0 pt-xl-0">
                        <div class="row">
                            <div class="col-3 d-flex justify-content-center align-items-center control-label">
                                Identificación
                            </div>
                            <div class="col-9">
                                <input type="text" asp-for="Id" class="form-control input-radius-50 mt-0" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 pt-3 pt-sm-3 pt-md-3 pt-lg-0 pt-xl-0">
                        <input type="submit" value="Consultar" class="btn btn-green w-100" />
                    </div>
                </div>

            </div>
            <div class="card-main pt-3">
                <h5>Información personal:</h5>
                <div class="row">
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Nombre Completo:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
                        <label asp-for="Id" class="control-label">Estado Civil:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-1 col-xl-1">
                        <label asp-for="Id" class="control-label">Edad:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Nacionalidad:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Ocupación:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
                        <label asp-for="Id" class="control-label">Teléfono:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Correo Electrónico:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                        <label asp-for="Id" class="control-label">Dirección de Residencia:</label>
                        <input type="text" asp-for="Id" class="form-control" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <hr />
                <div class="row">
                    <h5>Información de la cuenta:</h5>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Número de cuenta:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Tipo de cuenta:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Tipo de moneda:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3 col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
                        <label asp-for="Id" class="control-label">Saldo:</label>
                        <select class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <hr />
                <h5>Otras cuentas:</h5>
                <div class="">
                    <table id="tablacuenta" class="mt-4">
                        <thead>
                            <tr>
                                <th>Número de cuenta</th>
                                <th>Moneda</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>

                    </table>
                </div>

                <div class="form-group">
                    <span class="text-danger">@ViewData["Error"]</span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-center pt-3">
                    <input type="submit" value="Cerrar Cuenta" class="btn btn-green" />
                </div>
            </div>
        </div>
    </form>
</div>