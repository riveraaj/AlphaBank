@model Dtos.AlphaBank.Security.UserLoginDto;

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container">
    <form method="post" class="d-flex justify-content-center" asp-action="Login" asp-controller="Security">
        <div class="card-white-transparent shadow-container mt-5">
            <div class="header-card">
                <p class="tittle">Inicio de Sesión</p>
            </div>
            <div class="card-main pt-3">
                <div class="form-group pt-3">
                    <label asp-for="Id" class="control-label">Identificación:</label>
                    <input type="text" asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <label asp-for="Password" class="control-label">Contraseña:</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">@ViewData["Error"]</span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-center pt-3">
                    <input type="submit" value="Ingresar" class="btn btn-green" />
                </div>
            </div>
        </div>
    </form>
</div>